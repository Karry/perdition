#! /bin/sh
# postinst script for perdition-postgresql

#DEBHELPER#

if [ "$1" = "configure" ]; then
    ldconfig
    if [ -d /usr/doc -a ! -e /usr/doc/perdition-postgresql -a -d /usr/share/doc/perdition-postgresql ]; then
      ln -sf ../share/doc/perdition-postgresql /usr/doc/perdition-postgresql
    fi
fi

exit 0


