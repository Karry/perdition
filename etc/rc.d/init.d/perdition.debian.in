PATH=@prefix@/sbin:/bin:/usr/bin:/sbin:/usr/sbin
NAME=perdition

# Run perdition listening as a POP3 proxy [yes|no]
POP3=yes
# Run perdition listening as an IMAP4 proxy [yes|no]
IMAP4=yes

test -f $DAEMON || exit 0

case "$1" in
  start)
    if [ "$POP3" = "yes" ]; then 	
      start-stop-daemon --start --verbose --exec @prefix@/perdition.pop3
    fi
    if [ "$IMAP4" = "yes" ]; then 	
      start-stop-daemon --start --verbose --exec @prefix@/perdition.imap4
    fi
    ;;
  stop)
    if [ "$POP3" = "yes" ]; then 	
      start-stop-daemon --stop --verbose --exec @prefix@/perdition.pop3
      rm -f /var/run/perdition.pop3.pid
    fi
    if [ "$IMAP4" = "yes" ]; then 	
      start-stop-daemon --stop --verbose --exec @prefix@/perdition.imap4
      rm -f /var/run/perdition.imap4.pid
    fi
    ;;
  restart)
    $0 stop 
    $0 start 
    ;;
  force-reload|reload)
    # echo "Reloading $NAME configuration files"
    # start-stop-daemon --stop --signal 1 --quiet --exec $DAEMON
    ;;
  *)
    # echo "Usage: /etc/init.d/$NAME {start|stop|reload}"
    echo "Usage: /etc/init.d/$NAME {start|stop}"
    exit 1
    ;;
esac

exit 0
