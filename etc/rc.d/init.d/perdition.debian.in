PATH=@prefix@/sbin:/bin:/usr/bin:/sbin:/usr/sbin
NAME=perdition
DAEMON=@prefix@/sbin/perdition

test -f $DAEMON || exit 0

if [ -e /etc/default/perdition ]; then
	. /etc/default/perdition
fi

# Please do not edit the values below.
# Rather, please edit /etc/default/perdition
RUN_PERDITION="${RUN_PERDITION:=no}"
FLAGS="${FLAGS:=}"
POP3="${POP3:=yes}"
POP3_FLAGS="${POP3_FLAGS:=}"
POP3S="${POP3S:=yes}"
POP3S_FLAGS="${POP3S_FLAGS:=}"
IMAP4="${IMAP4_FLAGS:=yes}"
IMAP4_FLAGS="${IMAP4:=}"
IMAP4S="${IMAP4S:=yes}"
IMAP4S_FLAGS="${IMAP4S_FLAGS:=}"

if [ "$RUN_PERDITION" != "yes" ]; then
        exit 0
fi


case "$1" in
  start)
    if [ "$POP3" = "yes" ]; then 	
      start-stop-daemon --start --verbose \
        --exec @prefix@/sbin/perdition.pop3 -- $FLAGS $POP3_FLAGS
    fi
    if [ "$POP3S" = "yes" ]; then 	
      start-stop-daemon --start --verbose \
        --exec @prefix@/sbin/perdition.pop3s -- $FLAGS $POP3S_FLAGS
    fi
    if [ "$IMAP4" = "yes" ]; then 	
      start-stop-daemon --start --verbose \
        --exec @prefix@/sbin/perdition.imap4 -- $FLAGS $IMAP4_FLAGS
    fi
    if [ "$IMAP4S" = "yes" ]; then 	
      start-stop-daemon --start --verbose \
        --exec @prefix@/sbin/perdition.imaps -- $FLAGS $IMAP4S_FLAGS
    fi
    ;;
  stop)
    if [ "$POP3" = "yes" ]; then 	
      start-stop-daemon --stop --verbose \
        --exec @prefix@/sbin/perdition.pop3
    fi
    if [ "$POP3S" = "yes" ]; then 	
      start-stop-daemon --stop --verbose \
        --exec @prefix@/sbin/perdition.pop3s
    fi
    if [ "$IMAP4" = "yes" ]; then 	
      start-stop-daemon --stop --verbose \
        --exec @prefix@/sbin/perdition.imap4
    fi
    if [ "$IMAP4S" = "yes" ]; then 	
      start-stop-daemon --stop --verbose \
        --exec @prefix@/sbin/perdition.imaps
    fi
    ;;
  restart)
    $0 stop 
    $0 start 
    ;;
  force-reload|reload)
    echo "Reloading $NAME configuration files"
    start-stop-daemon --stop --signal 1 --quiet --exec $DAEMON
    ;;
  *)
    echo "Usage: /etc/init.d/$NAME {start|stop|restart|reload|force-reload}"
    exit 1
    ;;
esac

exit 0
